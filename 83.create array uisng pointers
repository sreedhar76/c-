#include <iostream>

int main() {
    // Define an array of integers
    int arr[] = {10, 20, 30, 40, 50};

    // Create a pointer to the array
    int *ptr = arr;

    // Display the value of the array using the pointer
    std::cout << "Value of array: ";
    for (int i = 0; i < 5; ++i) {
        std::cout << *(ptr + i) << " ";
    }
    std::cout << std::endl;

    return 0;
}
