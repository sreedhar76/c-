#include <iostream>

int main() {
    // Define an array of characters
    char arr[] = {'H', 'e', 'l', 'l', 'o'};

    // Create a pointer to the array
    char *ptr = arr;

    // Display the value of the array using the pointer
    std::cout << "Value of array: ";
    for (int i = 0; i < 5; ++i) {
        std::cout << *(ptr + i);
    }
    std::cout << std::endl;

    return 0;
}
