#include <iostream>

int main() {
    // Create a pointer to a float
    float* ptr;

    // Declare a float variable
    float num = 3.14;

    // Assign the address of 'num' to the pointer
    ptr = &num;

    // Display the value using the pointer
    std::cout << "Value of the float using pointer: " << *ptr << std::endl;

    return 0;
}
