#include <iostream>

int main() {
    // Create a pointer to an integer
    int* ptr;

    // Declare an integer variable
    int num = 10;

    // Assign the address of 'num' to the pointer
    ptr = &num;

    // Display the value using the pointer
    std::cout << "Value of the integer using pointer: " << *ptr << std::endl;

    return 0;
}
